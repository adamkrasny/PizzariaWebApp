<h1>Listing orders</h1>
<p id="notice"><%= notice %></p>
<table>
  <th> Customer Name </th>
  <th> Pizza Size </th>
  <th> Toppings </th>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.customer_name %> </td>
      <td><%= order.pizzas.first.size %> </td>
      <td><%= order.pizzas.first.toppings %> </td>
    </tr>
  <% end %>
  </table>
  <br />
  <%= link_to 'New order', new_order_path %>
